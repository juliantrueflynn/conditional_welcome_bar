{
  "name": "conditional_welcome_bar",
  "version": "0.1.0",
  "private": true,
  "description": "Shopify app with Rails, Webpacker, and React. Utilizes Shopify Polaris",
  "scripts": {
    "test": "jest --coverage --watchAll",
    "lint": "eslint 'app/javascript/**/*.{ts,tsx,js}'",
    "lint:fix": "eslint 'app/javascript/**/*.{ts,tsx,js}' --fix",
    "webpack:stats": "./bin/webpack-bundle-analyzer.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juliantrueflynn/conditional_welcome_bar.git"
  },
  "bugs": {
    "url": "https://github.com/juliantrueflynn/conditional_welcome_bar/issues"
  },
  "homepage": "https://github.com/juliantrueflynn/conditional_welcome_bar#readme",
  "dependencies": {
    "@apollo/client": "^3.0.2",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@rails/webpacker": "5.1.1",
    "@shopify/app-bridge": "^1.26.2",
    "@shopify/app-bridge-react": "^1.26.2",
    "@shopify/polaris": "^5.1.0",
    "@types/graphql": "^14.5.0",
    "@types/lodash": "^4.14.158",
    "@types/node": "^14.0.26",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "core-js": "^3.6.5",
    "dotenv": "^8.2.0",
    "graphql": "^15.3.0",
    "lodash.isequal": "^4.5.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "regenerator-runtime": "^0.13.7",
    "typescript": "^3.9.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.1",
    "@testing-library/react": "^10.4.7",
    "@testing-library/user-event": "^12.0.15",
    "@types/jest": "^26.0.7",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^26.1.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-react": "^1.1.7",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "jest": "^26.1.0",
    "jest-watch-typeahead": "^0.6.0",
    "prettier": "^2.0.5",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-dev-server": "^3.10.3"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "roots": [
      "<rootDir>/app/javascript"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+test.+(ts|tsx|js)"
    ],
    "collectCoverageFrom": [
      "app/javascript/**/*.{ts,tsx,js}",
      "!app/javascript/**/*.d.ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "app/javascript/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/config/webpack/test.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ]
  }
}
