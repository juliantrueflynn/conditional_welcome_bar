<style>
  .cw-bar-html--loading .cw-bar {display: none;}
  .cw-bar {
    z-index: 999;
    <%= bar.font_size && "font-size: #{bar.font_size};" %>
    <%= bar.text_color && "color: #{bar.text_color};" %>
    <%= bar.text_align && "text-align: #{bar.text_align};" %>
    <%= bar.background_color && "background-color: #{bar.background_color};" %>
  }
  .cw-bar__row {position: relative;}
  <% if bar.sticky? %>
  .cw-bar__fixed {
    position: fixed;
    right: 0;
    left: 0;
  }
  <%= bar.placement == "top" && ".cw-bar__fixed.cw-bar__top {top: 0;}" %>
  <%= bar.placement == "bottom" && ".cw-bar__fixed.cw-bar__bottom {bottom: 0;}" %>
  <% end %>
  <% if bar.url %>
  .cw-bar__content--linkable {
    color: inherit;
    display: block;
  }
  .cw-bar__full-width-link .cw-bar__content {width: 100%;}
  <% end %>
  .cw-bar__content {padding: <%= bar.padding %>;}
  <% if bar.close_button? %>
  .cw-bar__close {
    position: absolute;
    top: 0;
    right: 12px;
    bottom: 0;
    margin-right: <%= bar.padding_x %>;
  }
  .cw-bar__close-btn {
    outline: 0;
    background-color: transparent;
    border: 0;
    padding: 0;
    color: inherit;
    font-size: 24px;
    vertical-align: middle;
    line-height: 0;
    height: 100%;
  }
  <% end %>
</style>
